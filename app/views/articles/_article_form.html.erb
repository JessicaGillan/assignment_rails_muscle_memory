<form id='new_article' class='new_article' accept-charset="UTF-8"
  action='/articles' method='post'>
  <input  type="hidden"
          name="authenticity_token"
          value="<%= form_authenticity_token %>">

  <% if @article.id %>
    <input name="_method" type="hidden" value="patch" />
  <% end %>

  <label for='article_title'>Title</label>
  <input id='article_title' name='article[title]' type='text' value="<%= @article.title}%>">
  <label for='article_body'>Body</label>
  <textarea id='article_body' name='article[body]'><%= @article.body %></textarea>
  <input name='commit' type='submit' data-disable-width="<%= submit_text %>"
        value="<%= submit_text  %>">
</form>
